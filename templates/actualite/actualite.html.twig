{% extends 'back.html.twig' %}

{% block title %}Actualite index{% endblock %}

{% block body %}
    <h1>Actualite index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>IdActualite</th>
            <th>TitreActualite</th>
            <th>Description</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for actualite in actualites %}
            <tr>
                <td>{{ actualite.idActualite }}</td>
                <td>{{ actualite.titreActualite }}</td>
                <td>{{ actualite.description }}</td>
                <td>
                    <a href="{{ path('actualite_show', {'idActualite': actualite.idActualite}) }}">show</a>
                    <a href="{{ path('actualite_edit', {'idActualite': actualite.idActualite}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actualite_new') }}">Create new</a>
{% endblock %}
