{% extends 'back.html.twig' %}

{% block title %}Edit Reclamation{% endblock %}

{% block body %}
    <h1>Edit Reclamation</h1>

    <div class="card ">
                <div class="card-body">
                    <h4 class="card-title">Reclammer</h4>

                    {{ form_start(form) }}
                    <div class="form-group">

                        {{ form_label(form.sujet_rec,"sujet_rec") }}
                        {{ form_widget(form.sujet_rec , {'attr':{'class':'form-control p_input'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.niveau,"niveau") }}
                        {{ form_errors(form.niveau)  }}
                        {{ form_widget(form.niveau , {'attr':{'class':'form-control p_input'}}) }}
                    </div>
                     <div class="form-group">
                        {{ form_label(form.type,"type") }}
                        {{ form_errors(form.type)  }}
                        {{ form_widget(form.type , {'attr':{'class':'form-control p_input'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.user_id," ") }}
                        {{ form_errors(form.user_id)  }}
                        {{ form_widget(form.user_id , {'attr':{'class':'form-control p_input'}}) }}
                    </div>

                       <div class="text-center d-flex justify-content-around">
                        {{ form_row(form.enregistrer, {'attr': {'class' : 'btn btn-warning btn-block enter-btn'}} ) }}
                        <button class="btn ">
                            <a href="/reclamation">Cancel</a>
                        </button>
                    </div>

                    

                    

                    {{ form_end(form) }}
                </div>

    <a href="{{ path('reclamation_index') }}">back to list</a>

    {{ include('reclamation/_delete_form.html.twig') }}
{% endblock %}
