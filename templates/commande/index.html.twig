{% extends 'back.html.twig' %}

{% block title %}Vos Commandes{% endblock %}

{% block body %}
    {% block content %}
        <section class="bg-light p-3">
            <h1>Vos Commandes</h1>
        </section>
        <a href="{{path("listcommandes")}}" class="btn btn-success"> imprimer
            <i class="bi bi-cart-x"></i>
        </a>
        <form method="get" class=" d-flex justify-content-end">
            <input type="text" placeholder="id" style="width: 200px" class="form-control p_input mr-2" name="id"/>

            <button style="background-color: #FFB320 ; color: white" class="btn" type="submit">Recherche</button>
        </form>
        <table class="table">
            <thead>
            <tr>
                <th>id commande</th>
                <th>produit</th>
                <th>Quantit√©</th>
                <th>Prix</th>
            </tr>
            </thead>


            <tbody class="w-100">
            {% for ligne in lignesCommandes %}
                <tr class="w-100">
                        <td>{{ ligne.commande.id }}</td>
                        <td class="text-end">{{ ligne.Produit.nomProd }}</td>
                        <td class="text-end">{{ ligne.quantite }}</td>
                        <td class="text-end">{{ ligne.price }}</td>

                </tr>

            {% else %}
                <tr>
                    <td colspan="5" class="text-center">pas de commandes</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>

    {% endblock %}
{% endblock %}
